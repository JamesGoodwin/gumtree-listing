<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/gumtree_green</item>
        <item name="colorPrimaryDark">@color/gumtree_dark_green</item>
    </style>

    <style name="orange_button">
        <item name="android:background">@color/gumtree_orange</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="call_to_action_button" parent="orange_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">true</item>
    </style>
    
    <style name="call_to_action_background">
        <item name="android:background">@color/transparent_black_50_percent</item>
    </style>

</resources>
